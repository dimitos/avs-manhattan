<section class="section page__section bl-structure">
    <div class="container">
        <h2 class="title title__section bl-structure__title">Инфраструктура</h2>
        {include "views/common/components/filter.tpl" filterData=$filterData}
        <div class="structure__pane">
            {foreach $structureData as $item}
                <div class="structure__item">
                    <div class="structure__wrapper">
                        <div class="structure__image">
                            {$pathImage = mb_substr($item.image, 0, -4)}
                            <picture>
                                <source srcset="{$pathImage}-420.webp" media="(max-width: 420px)" type="image/webp" />
                                <source srcset="{$pathImage}-420.jpg" media="(max-width: 420px)" />
                                <source srcset="{$pathImage}.webp" type="image/webp" />
                                <img class="image image__fit image__fit_cover"
                                    src="{$pathImage}.jpg"
                                    alt="{$item.alt}"
                                    width="264"
                                    height="208"
                                    loading="lazy"
                                    decoding="async"/>
                            </picture>
                        </div>
                        <div class="structure__content">
                            <div class="title structure__title">{$item.title}</div>
                            {if !empty($item.hours)}
                                <div class="structure__content-item structure__hours">{$item.hours}</div>
                            {/if}
                            {if !empty($item.phone)}
                                <div class="structure__content-item structure__phone link-desctop no-wrap">{$item.phone}</div>
                                <a href="tel:{preg_replace('![^0-9]+!', '', $item.phone)}" class="structure__content-item structure__phone link-mobile no-wrap">{$item.phone}</a>
                            {/if}
                            {if !empty($item.site)}
                                <a href="{$item.site}" class="structure__content-item structure__site no-wrap" target="_blank">{parse_url($item.site, PHP_URL_HOST)}</a>
                            {/if}
                        </div>
                    </div>
                </div>
            {/foreach}
        </div>
        {include "views/common/components/pagination.tpl"}
    </div>
</section>
